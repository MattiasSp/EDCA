<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/attributeeditor_TopScrollView"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="10dp" >
    
	<LinearLayout 
    	android:id="@+id/attributeeditor_TopLinearLayout"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"    
    	android:orientation="vertical" >
    	
    	<TextView
        	android:id="@+id/attributeeditor_textView_addattributes"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_gravity="center"
        	android:text="@string/attributeeditor_content_head_addData"
        	android:textAppearance="?android:attr/textAppearanceLarge" />

    	<View
        	android:layout_width="fill_parent"
        	android:layout_height="2dp"
        	android:background="#FF909090" />

    	<LinearLayout
        	android:id="@+id/attributeeditor_formcontainer"
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:orientation="vertical" >
    	</LinearLayout>
    	
    	<Button
        	android:id="@+id/attributeeditor_button_save"
        	android:layout_width="200dp"
        	android:layout_height="wrap_content"
        	android:layout_gravity="center"
        	android:onClick="onClickSave"
        	android:text="@string/attributeeditor_button_save" />

	</LinearLayout>
</ScrollView>